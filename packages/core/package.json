{
    "name": "loro-mirror",
    "version": "0.1.0",
    "description": "Type-safe state management synchronized with Loro CRDT via a declarative schema and bidirectional mirroring.",
    "type": "module",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "files": [
        "dist",
        "src"
    ],
    "scripts": {
        "build": "tsc -p .",
        "test": "vitest run",
        "test:watch": "vitest",
        "lint": "eslint src --ext .ts,.tsx",
        "typecheck": "tsc -p tsconfig.typecheck.json --noEmit"
    },
    "keywords": [
        "loro",
        "loro-crdt",
        "crdt",
        "state-management",
        "synchronization",
        "sync"
    ],
    "author": "Loro Team",
    "license": "MIT",
    "dependencies": {
        "immer": "^10.0.3"
    },
    "peerDependencies": {
        "loro-crdt": "^1.7.1"
    },
    "devDependencies": {
        "@types/node": "^20.10.5",
        "typescript": "^5.3.3"
    }
}
