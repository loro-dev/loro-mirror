{
    "name": "loro-mirror-react",
    "version": "1.2.0",
    "description": "React hooks and context for Loro Mirror: type-safe CRDT-backed state with selective subscriptions.",
    "type": "module",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.js",
            "default": "./dist/index.js"
        }
    },
    "sideEffects": false,
    "publishConfig": {
        "access": "public"
    },
    "files": [
        "dist",
        "src"
    ],
    "scripts": {
        "build": "tsc -p .",
        "test": "vitest run",
        "test:watch": "vitest",
        "typecheck": "tsc -p tsconfig.typecheck.json --noEmit"
    },
    "keywords": [
        "react",
        "react-hooks",
        "context",
        "selectors",
        "provider",
        "state-management",
        "crdt",
        "loro",
        "loro-crdt",
        "typescript",
        "synchronization",
        "immutable"
    ],
    "author": "Loro Team",
    "license": "MIT",
    "peerDependencies": {
        "loro-crdt": "^1.8.0",
        "loro-mirror": "workspace:*",
        "react": "^16.8.0 || ^17.0.0 || ^18.0.0 || ^19.0.0"
    },
    "devDependencies": {
        "@types/node": "^20.10.5",
        "@types/react": "^18.2.45",
        "react": "^18.2.0",
        "typescript": "^5.3.3"
    }
}
