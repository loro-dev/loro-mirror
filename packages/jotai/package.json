{
    "name": "loro-mirror-jotai",
    "version": "0.2.0",
    "description": "Jotai atoms for Loro Mirror: CRDT-backed atomic state with typed schema and bidirectional sync.",
    "type": "module",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.js",
            "default": "./dist/index.js"
        }
    },
    "sideEffects": false,
    "publishConfig": {
        "access": "public"
    },
    "files": [
        "dist"
    ],
    "scripts": {
        "build": "tsc -p .",
        "test": "vitest run",
        "test:watch": "vitest",
        "typecheck": "tsc -p tsconfig.typecheck.json --noEmit"
    },
    "keywords": [
        "jotai",
        "state-management",
        "crdt",
        "loro",
        "loro-crdt",
        "synchronization",
        "react",
        "atomic"
    ],
    "author": "Loro Team",
    "license": "MIT",
    "dependencies": {},
    "peerDependencies": {
        "loro-mirror": "workspace:*",
        "jotai": "^2.0.0",
        "loro-crdt": "^1.8.0"
    },
    "devDependencies": {
        "@testing-library/jest-dom": "^6.1.5",
        "@testing-library/react": "^16.3.0",
        "@types/node": "^20.10.5",
        "@types/react": "^18.2.45",
        "jsdom": "^23.0.1",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "typescript": "^5.3.3",
        "vitest": "^1.0.4"
    }
}
